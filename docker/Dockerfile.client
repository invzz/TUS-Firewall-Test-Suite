FROM python:3.12-slim

# Install basic network tools
RUN apt-get update && apt-get install -y \
    netcat-openbsd \
    iputils-ping \
    && rm -rf /var/lib/apt/lists/*

# Copy client script
COPY src/client/game-client-simulator.py /usr/local/bin/game-client-simulator.py
RUN chmod +x /usr/local/bin/game-client-simulator.py

# Set working directory
WORKDIR /root

# Default command
CMD ["python3", "/usr/local/bin/game-client-simulator.py"]